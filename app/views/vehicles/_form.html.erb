<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @vehicle, html: {class: "form-horizontal"} do |f| %>
      <div class="center_box">
        <h2 class="center"><%= @title %></h2>
        <div class="padding_box">
          <div class="field">
            <%= f.label :vehicle_name, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :vehicle_name, class: "col-sm-8"  %>
            </div>
          </div>

          <div class="field">
            <%= f.label :registration_number, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :registration_number, class: "col-sm-8"  %>
            </div>
          </div>

          <div class="field">
            <%= f.label :number_of_seats, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :number_of_seats, class: "col-sm-8"  %>
            </div>
          </div>

          <div class="center">
            <%= f.submit "Add Vehicle", class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>