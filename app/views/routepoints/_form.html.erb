<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @routepoint, html: {class: "form-horizontal"} do |f| %>
      <div class="center_box">
        <h2 class="center"><%= @title %></h2>
        <div class="padding_box">
          <div class="field">
            <%= f.label :route_id, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.collection_select :route_id, Driveroute.order(:route_name),:id,:route_name, include_blank: true %>
            </div>
          </div>

          <div class="field">
            <%= f.label :location_id, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.collection_select :location_id, Location.order(:location_place),:id,:location_place, include_blank: true  %>
            </div>
          </div>          
          <div class="center">
            <%= f.submit @title, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
