<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @trip, html: {class: "form-horizontal"} do |f| %>
      <div class="center_box">
        <h2 class="center"><%= @title %></h2>
        <div class="padding_box">
          <div class="field">
            <%= f.label :vehicle_id, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :vehicle_id, class: "col-sm-8"  %>
            </div>
          </div>

          <div class="field">
            <%= f.label :route_id, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :route_id, class: "col-sm-8"  %>
            </div>
          </div>
          <div class="field">
            <%= f.label :point_from, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :point_from, class: "col-sm-8"  %>
            </div>
          </div>    
          
          <div class="field">
            <%= f.label :point_to, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :point_to, class: "col-sm-8"  %>
            </div>
          </div>     
          <div class="field">
            <%= f.label :time_start, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :time_start, class: "col-sm-8"  %>
            </div>
          </div>
          <div class="field">
            <%= f.label :time_to, class: "control-label col-sm-4" %>
            <div class="input_field">
              <%= f.text_field :time_to, class: "col-sm-8"  %>
            </div>
          </div>                           
          <div class="center">
            <%= f.submit @title, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>