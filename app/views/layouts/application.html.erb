<!DOCTYPE html>
<html>
  <head>
    <title>IrelandTransport</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="layout">
      <div class="header">
        <% if user_signed_in? %>
          <span>Logged in as <strong><%= current_user.email %></strong>.</span>
        <% end %>
        <p class="navbar-text float-right">
        <%= link_to "Home", root_path %>
        <% if user_signed_in? %>
          <%= link_to 'Vehicles List', vehicles_path, :class => 'navbar-link' %>
          <%= link_to 'Routes List', driveroutes_path, :class => 'navbar-link' %>
          <%= link_to 'Trip List', trips_path, :class => 'navbar-link' %>
          <%= link_to 'Route Points', routepoints_path, :class => 'navbar-link' %>
          <%= link_to 'Locations List', locations_path, :class => 'navbar-link' %>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Destinations", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Services", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Pages", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Users", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Shop", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Contact Us", new_user_registration_path, :class => 'navbar-link'  %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
        </p>      
      </div>
      <div class="container">
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>    
    </div>      
    </div>


  </body>
</html>
